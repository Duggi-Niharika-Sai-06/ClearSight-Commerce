<%- include('partials/header') %>

  <div align="Center">
    <img src="/logo.png" width="300" height="300"/>
  </div>
  
  
  <div class="border border-5 shadow bg-white rounded" style="margin: 3% 20% 5% 20%; padding: 5% 5%">
    <form action="/payment-details" method="POST">
        <h4>Credit Card Info</h4>
      <div class="row">
        <div class="col">
            <div class="form-group my-3">
                <label for="card-type">Card Type:</label>
                <div>
                    <select class="form-group" id="card-type" name="card-type">
                        <option value="visa">Visa</option>
                        <option value="mastercard">Mastercard</option>
                        <option value="american-express">American Express</option>
                        <option value="discover">Discover</option>
                    </select>
                </div>
              </div>
        </div>
        <div class="col">
            <div class="form-group my-3">
                <label for="cc_no">CC Number</label>
                <input type="number" class="form-control" name="cc_no" required placeholder="">
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col">
            <div class="form-group my-4">
                <label for="ex_date">Expiry date</label>
                <input type="date" class="form-control" name="ex_date" required placeholder="">
              </div>
        </div>
          <div class="col">
            <div class="form-group my-4">
                <label for="sec_code">Security Code</label>
                <input type="number" class="form-control" name="sec_code" required placeholder="">
              </div>
          </div>
      </div>

      <h4 class="mt-3">Billing Address</h4>
      <div class="form-group my-3">
        <label for="street">Street</label>
        <input type="text" class="form-control" name="street" required placeholder="">
      </div>
      <div class="row">
        <div class="col">
            <div class="form-group my-4">
                <label for="city">City</label>
                <input type="text" class="form-control" name="city" required placeholder="">
              </div>
        </div>
          <div class="col">
            <div class="form-group my-4">
                <label for="state">State</label>
                <input type="text" class="form-control" name="state" required placeholder="">
              </div>
          </div>
      </div>



      <button id="font-increase-btn" class="btn btn-light">Increase Font Size</button>
      <div class="form-group mt-5">
        <button type="submit" class="form-control btn btn-dark">Done</button>
      </div>    
    </form>


  </div>
  <%- include('partials/footer') %>


  <script>
    var fontSize = 16; // initial font size
    document.getElementById("font-increase-btn").addEventListener("click", function() {
      fontSize += 2; // increase font size by 2
      document.body.style.fontSize = fontSize + "px";
    });
  </script>