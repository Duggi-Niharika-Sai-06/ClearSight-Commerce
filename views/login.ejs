<%- include('partials/header') %>

<div class="container" align="center">
  <div align="center">
    <img src="/logo.png" width="300" height="300"/>
  </div>

  <div class="border border-5 shadow bg-white rounded" style="margin: 3% 22% 5% 22%; padding: 5% 5%; background-color: #f9f9f9;">
    <form action="/login" method="POST">
      <div class="form-group my-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" required placeholder="enter your email address">
      </div>
      <div class="form-group my-4">
        <label for="password">Password</label>
        <input type="password" class="form-control" name="password" required placeholder="enter password">
      </div>
      <div class="form-group mt-5">
        <button type="submit" class="form-control btn btn-dark">Login</button>
      </div>
    </form>

    <div class="mt-3">
      <p class="text-body">Don't have an account?
        <button id="font-increase-btn" style="background-color: rgb(157, 157, 228);" class="btn btn-light">Increase Font Size</button>
        <a class="text-primary" href='/register'>Sign up for an account</a>
      </p>
    </div>
  </div>

  <div class="mt-3">
    <input type="range" min="0" max="200" value="100" class="slider" id="range">
  </div>
  
</div>

<%- include('partials/footer') %>

<style>
  #font-increase-btn {
    float: right;
  }

  #middle-panel {
    height: 60%; /* Initial height of the middle panel */
    transition: height 0.3s ease-in-out; /* Smooth transition when height changes */
  }

  #middle-panel.large {
    height: 50%; /* Increased height of the middle panel when the font is increased */
  }
  input[type=range] {
  width: 40%; /* or any other percentage or pixel value you prefer */
}
</style>

<script>
  var fontSize = 16; // initial font size
  document.getElementById("font-increase-btn").addEventListener("click", function() {
    fontSize += 2; // increase font size by 2
    document.body.style.fontSize = fontSize + "px";
    document.getElementById("middle-panel").classList.add("large"); // Add the "large" class to the middle panel to increase its size
  });

  var rangeInput = document.getElementById('range');
  var container = document.getElementsByClassName('container')[0];
  rangeInput.addEventListener("input",function(){
    container.style.filter = "brightness(" + rangeInput.value + "%)";
  });
</script>
